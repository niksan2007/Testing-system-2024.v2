    <form action="" method="post" enctype="multipart/form-data">
        <section>
            <div class="main">
                <fieldset>
                    <legend>Укажите количество вопросов</legend>
                    <div class="counter">
                        <span tooltip="Максимум: 10 вопросов" flow="down">
                            <button id="minus_que" type="button">-</button>
                            <input type="text" id='numscores' value='1' class="numscores" name="count_que" required>
                            <button id="plus_que" type="button">+</button>
                        </span>
                    </div>
                </fieldset>
            </div>
    
            <div class="main">
                <fieldset>
                    <legend>Укажите длительность тестирования</legend>
                    <div class="counter">
                        <span tooltip="Максимум: 90 минут" flow="down">
                            <button id="minus_day" type="button">-</button>
                            <input type="text" id='dayscores' value='1' class="dayscores" name="test_remaining" required>
                            <button id="plus_day" type="button">+</button>
                        </span>
                    </div>
                </fieldset>
            </div>
    
            <div class="main">
                <fieldset>
                    <legend>Напишите тему тестирования</legend>
                    <div class="topicBody">
                        <div class="topicbox">
                            <input type="text" name="topic" id="topic"/>
                        </div>
                    </div>
                </fieldset>
            </div>

            <div id="testInputs">
                <div class="main">
                    <fieldset class="genTask">
                        <legend>Создание задачи</legend>
        
                        <div class="input">
                            <label for="task1">Постановка задачи - 1:</label>
                            <textarea style="overflow:auto;resize:none" name="task1" id='task1' rows="5" cols="45" ></textarea><br><br>
                        </div>

                        <div class="input">
                            <label for="task1">Пояснение к задаче - 1:</label>
                            <textarea style="overflow:auto;resize:none" name="preview1" id='preview1' rows="5" cols="45"></textarea><br><br>
                        </div>
        
                        <div class="input">
                            <input id="solution1" type="file" name="scriptSolution" accept=".sql"  />
                            <label for="solution1">Решение задачи - 1</label><br><br>
                        </div>
                
                        <div class="input">
                            <input id="photo1" type="file" name="image" accept=".png, .jpg, .jpeg" />
                            <label for="photo1">Добавить фото таблицы - 1</label><br><br>
                        </div>
                
                        <div class="input">
                            <input id="genTable1" type="file" name="scriptTable" accept=".sql" />
                            <label for="genTable1">Скрипт генерации таблицы задачи - 1</label><br><br>
                        </div>

                        <div class="input">
                            <label for="table_name1">Имя таблицы - 1</label>
                            <input id="table_name1" type="text" name="table_name1" /><br><br>
                        </div>
                
                        <div class="input">
                            <input id="testData1" type="file" name="scriptTableData" accept=".sql" />
                            <label for="testData1">Скрипт генерации тестовых данных задачи - 1</label>
                        </div>
                    </fieldset>
                </div>
            </div>
        </section>
        
        <div class="button_send">
            <input type="submit" value="Создать тест" class="btn_up">
        </div>

    </form>
    
    <script src="/css_files/add_tasks.js"></script>
</body>
